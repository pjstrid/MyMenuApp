<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:text="@string/restaurant_name"
        android:textAlignment="center"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/font_xx_large"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="@string/menu_title"
        android:textAlignment="center"
        android:textColor="@color/dark_red"
        android:textSize="@dimen/font_large"
        android:textStyle="bold" />


    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="4dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/beige"
        android:padding="8dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <!--// ================ MENU ITEM 1 =====================-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/light_brown"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_cardView_1"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/image_item_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image_description_default"
                            android:scaleType="centerCrop"
                            android:background="@color/gray" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/title_item_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/title_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_large"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/image_cardView_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_cardView_1"
                        app:layout_constraintTop_toTopOf="@id/image_cardView_1" />

                    <TextView
                        android:id="@+id/info_item_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="cursive"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/info_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/image_cardView_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/title_item_1"
                        app:layout_constraintTop_toBottomOf="@+id/title_item_1" />

                    <TextView
                        android:id="@+id/price_item_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="cursive"
                        android:text="@string/price_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/title_item_1"
                        app:layout_constraintTop_toBottomOf="@+id/info_item_1" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!--// ================ MENU ITEM 2 =====================-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/light_brown"
                app:cardCornerRadius="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_cardView_2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/image_item_2"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:contentDescription="@string/image_description_default"
                            android:scaleType="centerCrop"
                            android:background="@color/gray" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/title_item_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/title_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_large"
                        android:textStyle="bold"

                        app:layout_constraintBottom_toTopOf="@+id/image_cardView_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_cardView_2"
                        app:layout_constraintTop_toTopOf="@id/image_cardView_2" />

                    <TextView
                        android:id="@+id/info_item_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="cursive"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/info_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/image_cardView_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/title_item_2"
                        app:layout_constraintTop_toBottomOf="@+id/title_item_2" />

                    <TextView
                        android:id="@+id/price_item_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="cursive"
                        android:text="@string/price_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/title_item_2"
                        app:layout_constraintTop_toBottomOf="@+id/info_item_2" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!--// ================ MENU ITEM 3 =====================-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/light_brown"
                app:cardCornerRadius="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/image_cardView_3"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        app:cardCornerRadius="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/image_item_3"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:contentDescription="@string/image_description_default"
                            android:scaleType="centerCrop"
                            android:background="@color/gray" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/title_item_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="cursive"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/title_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_large"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toTopOf="@+id/image_cardView_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/image_cardView_3"
                        app:layout_constraintTop_toTopOf="@id/image_cardView_3" />

                    <TextView
                        android:id="@+id/info_item_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="cursive"
                        android:gravity="center_vertical"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:text="@string/info_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/image_cardView_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/title_item_3"
                        app:layout_constraintTop_toBottomOf="@+id/title_item_3" />

                    <TextView
                        android:id="@+id/price_item_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="cursive"
                        android:text="@string/price_default"
                        android:textColor="@color/dark_red"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/title_item_3"
                        app:layout_constraintTop_toBottomOf="@+id/info_item_3" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>